<%if logged_in? && current_user.admin_user==true %>
  <%= link_to("<< See List of Exams", exams_path, :class => 'back-link') %>
<%else%>
  <%= link_to("<< Back to Home", home_path, :class => 'back-link') %>
<%end%>

<h2>Questions for <strong> <%=@exam.exam_name%> </strong> Examination </h2>

<% @Qno=1 %>
<% @exam.questions.each do |question| %>
  <pre>
    <%=@Qno%>
    <%= question.question_description %>
    <%@Qno=@Qno+1%>
  </pre>
<% end %>