<div class="exams index">
  <h2>Associated Exams</h2>
  <%if @results.empty?%>
    <h3> There are no exams associated by Kreeti for you currently </h3>
  <%else%>
    <div class="table-responsive">
    <table class="table table-hover" summary="Exams Associated with the candidate">
      <tr class="header">
        <th>Exam Name</th>
        <th>Marks</th>
        <th>Result</th>
        <th>Comments</th>
        <th>Appear</th>
      </tr>
      <% @results.each do |result| %>
        <tr>
          <td><%= result.exam.exam_name%></td>
          <td><%= result.marks%></td>
          <td><%= result.results%></td>
          <td><%= result.comments%></td>
          <td>
          <%if result.attach.present?%>
            <%=link_to "View Answersheet", result.attach.url, target: "_blank" , :class => 'btn btn-info' %>
            <%= link_to("View Question Paper", question_paper_exam_path(result.exam.id) , :class => "btn btn-primary") %>
          <%else%>
            <%= link_to("View Question Paper", question_paper_exam_path(result.exam.id) , :class => "btn btn-primary") %>
          <%end%>
          </td>
        </tr>
      <% end %>
    </table>
    </div>
  <%end%>
</div>