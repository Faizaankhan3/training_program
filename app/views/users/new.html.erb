<%= link_to("<< Back to List", users_path, :class => 'back-link') %>

<div class="candidate new">
  <h2>Add New Candidate</h2>

  <%= form_for(@candidate, :url => users_path, :method => 'post') do |f| %>

    <table summary="Candidates form fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Email Id</th>
        <td><%= f.text_field(:email) %></td>
      </tr>
       <tr>
        <th>Qualification</th>
        <td><%= f.text_field(:qualification) %></td>
      </tr>
       <tr>
        <th>College</th>
        <td><%= f.text_field(:college) %></td>
      </tr>
       <tr>
        <th>Stream</th>
        <td><%= f.text_field(:stream) %></td>
      </tr>
       <tr>
        <th>Phone Number</th>
        <td><%= f.text_field(:phone) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Create Candidate") %>
    </div>

  <% end %>
</div>